{
  "importMap": "import_map.json",
  "fmt": {
    "include": ["src-www/"],
    "exclude": ["src-www/dist/"]
  },
  "lint": {
    "include": ["src-www/"],
    "exclude": ["src-www/dist/"]
  },
  "test": {
    "include": ["src-www/"],
    "exclude": ["src-www/dist/"]
  },
  "tasks": {
    "test": "deno test -A ./src-www",
    "test:all": "deno fmt && deno task check && deno lint && deno task test",
    "test:update": "deno test -A -- --update source",
    "check": "deno check ./src-www/index.tsx",
    "build": "cargo tauri android build --debug && deno task open",
    "dev": "cargo tauri dev",
    "open": "open 'src-tauri/gen/android/app/build/outputs/apk/universal/debug'"
  },
}
